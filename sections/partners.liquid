<style>
  .partners{
    background-color: {{section.settings.background-color}}
  }
</style>
<div class="container partners">
  {% if section.settings.partner_logo != blank %}
    {{ section.settings.partner_logo | image_url: width: 140 | image_tag }}
  {% endif %}
</div>
{% schema %}
{
  "name": "Partners",
  "settings": [
    {
      "type": "color",
      "id": "background-color",
      "label": "Background Color",
      "default":"#666666"
    },
    {
      "type": "image_picker",
      "id": "partner_logo",
      "label": "Partner Logo"
    }
  ],
  "presets": [
    {
      "name": "Partners"
    }
  ]
}
{% endschema %}
