<style>
  .partners{
    background-color: {{section.settings.background-color}}
  }
</style>
<div class="partners">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'partner-logo' %}
        {% if block.settings.partner_logo != blank %}
          <div class="partner-svg-wrapper">
            {{ block.settings.partner_logo | image_url: width: 300, height: 100 | image_tag }}
          </div>
        {% endif %}
    {% endcase %}
  {% endfor %}
</div>
{% schema %}
{
  "name": "Partners",
  "settings": [
    {
      "type": "color",
      "id": "background-color",
      "label": "Background Color",
      "default":"#666666"
    },
  ],
  "blocks": [
    {
      "type": "partner-logo",
      "name": "Partner Logo",
      "settings": [
       {
      "type": "image_picker",
      "id": "partner_logo",
      "label": "Partner Logo"
    }
      ]
    }
  ],
  "presets": [
    {
      "name": "Partners"
    }
  ]
}
{% endschema %}
